

@{
    ViewBag.Title = "Survey";
    Layout = "~/Views/Shared/theme1.cshtml";

}
<div class="col-lg-12" style="height:80vh">
    <div class="col-lg-12" style="text-align:center">
        @*<h4 style="text-align:center; height:40px">Cx Logo </h4>*@
        <img src="~/Images/youlogohere.png" style="width:10%; " class="img img-responsive center-block"  />
    </div>
    <div class="container-fluid" > 
    <h4 style="text-align:center;margin-top:10px">Customer Satisfaction Survey</h4>
        <h6 style="text-align:center">Overall Progress <span id="progressbar_number">0</span>%</h6>
    <div class="m-section__content m--align-center offset-2   " style=" width:70%; text-align:center" >
      
        <div class="m--space-10"></div>
        <div class="progress m-progress--lg m--align-center " style="width:100%;height:22px; text-align:center ">
            <div id="progressbar" class="progress-bar m--bg-accent" role="progressbar" style="width:0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
        </div>        
    </div>        
        
    <div id="surveyview" class="col-lg-12" style="text-align:center; height:62vh; overflow:auto;  margin:10px;">
        @{  Html.RenderPartial("_LongtextType");
            Html.RenderPartial("_ShorttextType");
            Html.RenderPartial("_MultichoiceType");
            Html.RenderPartial("_ChoiceType");
            Html.RenderPartial("_MultiStatementType");
            Html.RenderPartial("_DropdownType");
            Html.RenderPartial("_YesNoType");
            Html.RenderPartial("_OpinionScaleType");
            Html.RenderPartial("_NumberType");
            Html.RenderPartial("_DateType");
            Html.RenderPartial("_PictureType");
            Html.RenderPartial("_AgreeType");
            Html.RenderPartial("_FileType");
            Html.RenderPartial("_EmailType");
            Html.RenderPartial("_RatingType");
        }        
        
</div>
    <div class="m-footer--fixed" style="margin-bottom:10px" id="surveyview_footer">
        <input type="hidden" value="0" id="surveyId" />
        <input type="hidden" value="1" id="current_sequence_number" />
        <input type="hidden" value="0" id="current_questionId" />
        <input type="hidden" value="0" id="current_answerId" />
        <input type="hidden" value="0" id="current_question_userId" />
        <input type="hidden" value="" id="current_question_type" />
        <div class=" " style="text-align:center">
            <button id="previous_button_publish" type="button" class="btn btn-md btn-danger "  style="width:150px">Previous</button>
            <button id="next_button_publish" type="button" class="btn btn-md btn-success " style="width:150px">Next</button>
            @*<button id="done_button_publish" type="button" class="btn btn-md btn-warning" style="display:none;">Done</button>*@
            @Html.ActionLink(
                                                   "Done",
                                                   "Complete",
                                                   "Survey",
                                                   new { },
                                                   new { @class = "btn btn-md btn-warning", @id = "done_button_publish", @style="display:none;" }
                                                )


            @*<button type="button" class="btn btn-success m-btn m-btn--custom" id="m_sweetalert_demo_3_3">
                 Success
            </button>
            <button type="button" class="btn btn-warning m-btn m-btn--custom" id="m_sweetalert_demo_3_1">
                Warning
            </button>
            <button type="button" class="btn btn-danger m-btn m-btn--custom" id="m_sweetalert_demo_9">
                Alert
            </button>*@
        </div>
    </div>
    
</div> 

@{ Html.RenderPartial("_SurveyScripts"); }    
