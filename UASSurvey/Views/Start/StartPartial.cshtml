@model UASSurvey.Models.StartSurvey

<div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body m-page__container">
    <button class="m-aside-left-close m-aside-left-close--skin-light" id="m_aside_left_close_btn">
        <i class="la la-close"></i>
    </button>

    <div class="col-lg-12 " >
        
        <p>
            <h4 style="text-align:center">New Survey </h4>
        </p>

        <p>
            <div id="StartNewSurveyForm">

                @using (Html.BeginForm("Design", "Design", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group m-form__group ">
                                   
                                        @Html.LabelFor(model => model.SurveyName, htmlAttributes: new { @class = "h5" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.SurveyName, new { htmlAttributes = new { @class = "form-control form-control-lg m-input m-input--solid", @style = "border:solid 1px silver;" } })
                                            @Html.ValidationMessageFor(model => model.SurveyName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group ">

                                    @Html.LabelFor(model => model.SurveyObjective, htmlAttributes: new { @class = "h5" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.SurveyObjective, new { htmlAttributes = new { @class = "form-control form-control-lg m-input m-input--solid", @style = "border:solid 1px silver;" } })
                                        @Html.ValidationMessageFor(model => model.SurveyObjective, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "h5" })
                                    <div class="input-group date" id="start_datepicker">
                                        @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control form-control-lg m-input m-input--solid", @id = "start_datepicker", @style = "border:solid 1px silver;" } })
                                        @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                                        <span class="input-group-addon">
                                            <i class="la la-calendar"></i>
                                        </span>
                                    </div>

                                    </div>
                                </div>
                                                  
                            @*<div class="col-md-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "h5" })
                                  
                                        <div class="input-group date" id="end_datepicker">
                                            @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control form-control-lg m-input m-input--solid", @id = "end_datepicker", @style = "border:solid 1px silver;" } })
                                            @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                                            <span class="input-group-addon">
                                                <i class="la la-calendar"></i>
                                            </span>
                                        </div>
                                    </div>                                                                                                  
                            </div>*@
                        </div>
                      
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group ">
                                    <label class="h5">Survey Type:</label>
                                    <div class="col-md-10">
                                        <select id="SurveyType" name="SurveyType" class="form-control m-input form-control-lg">
                                            <option value="Standard">Standard</option>
                                            <option value="Opinion Poll">Opinion Poll</option>
                                            <option value="Generic">Generic</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="h5">Select Campaign:</label>
                                    <div class="col-md-10">
                                        <select id="CampaignName" class="form-control m-input form-control-lg">
                                            <option value="1">Campaign One</option>
                                        </select>

                                    </div>
                                </div>
                                </div>
                              </div>


                            </div>
                            }


                        </div>
</p>
    </div>

   
    </div>
    <!-- begin::Footer -->
<footer class="m-grid__item m-footer fixed-bottom ">
    <div class="m-container m-container--fluid m-container--full-height m-page__container">
        <div class="m-footer__wrapper ">
            <div class="m-stack m-stack--flex-tablet-and-mobile m-stack--ver m-stack--desktop">

                <div class="m-stack__item m-stack__item--right m-stack__item--middle m-stack__item--first">
                    <div class="form-group" style="margin-bottom:40px">
                        <div class="col-md-offset-2 col-md-10">
                            <input id="save_return" type="submit" value="Save & Return To Surveys" class="btn btn-lg btn-metal  " />
                            <input id="save_create" type="submit" value="Save & Start Creating Survey" class="btn btn-lg btn-success  " />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

<!-- end::Footer -->



